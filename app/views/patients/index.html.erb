<h1>Listing Patients</h1>

<%= link_to 'New Patients', new_patient_path %>
<table>
  <tr>
    <th>Patient ID</th>
    <th>Last Name</th>
    <th>First Name</th>
    <th>Birth Date</th>
  </tr>

  <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.pID %></td>
      <td><%= patient.last_name %></td>
      <td><%= patient.first_name %></td>
      <td><%= patient.birth_date %></td>
      <td><%= link_to 'Show', patient_path(patient) %></td>
    </tr>
  <% end %>
</table>
