<p>
  <strong>Patient ID:</strong>
  <%= @patient.pID %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @patient.last_name %>
</p>

<p>
  <strong>First Name:</strong>
  <%= @patient.first_name %>
</p>

<p>
  <strong>Birth Date:</strong>
  <%= @patient.birth_date %>
</p>

<h2>Notes</h2>
<%= render @patient.notes %>

<h2>Add a note about this patient:</h2>
<%= form_for([@patient, @patient.notes.build]) do |f| %>
  <p>
    <%= f.label :clinician %><br>
    <%= f.text_field :clinician %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>
